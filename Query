CREATE TABLE VOLUNTEER_TBL (
VOLUNTEER_ID   VARCHAR2(12) PRIMARY KEY,
FULL_NAME     VARCHAR2(150),
SKILL_CATEGORY VARCHAR2(50),
PRIMARY_PHONE VARCHAR2(20),
EMAIL    VARCHAR2(100),
STATUS   VARCHAR2(20)
);
