CREATE TABLE SHIFT_TBL (
    SHIFT_ID            NUMBER(10) PRIMARY KEY,
    SHIFT_DATE          DATE,
    START_TIME          VARCHAR2(10),
    END_TIME            VARCHAR2(10),
    LOCATION            VARCHAR2(100),
    REQUIRED_HEADCOUNT  NUMBER(4),
    STATUS              VARCHAR2(20)
);
INSERT INTO SHIFT_TBL VALUES
(410001, TO_DATE('2025-03-10','YYYY-MM-DD'), '09:00', '12:00', 'MAIN_HALL', 10, 'OPEN_FOR_ASSIGNMENT');
INSERT INTO SHIFT_TBL VALUES
(410003, TO_DATE('2025-03-11','YYYY-MM-DD'), '18:00', '21:00', 'AUDITORIUM', 8, 'PLANNED');

CREATE TABLE ASSIGNMENT_TBL (
    ASSIGNMENT_ID     NUMBER(10) PRIMARY KEY,
    VOLUNTEER_ID      VARCHAR2(12),
    SHIFT_ID          NUMBER(10),
    ASSIGNED_ROLE     VARCHAR2(50),
    ATTENDANCE_STATUS VARCHAR2(20),
    CHECKIN_TIME      VARCHAR2(10),
    CHECKOUT_TIME     VARCHAR2(10),
    CONSTRAINT FK_VOLUNTEER
        FOREIGN KEY (VOLUNTEER_ID)
        REFERENCES VOLUNTEER_TBL(VOLUNTEER_ID),
    CONSTRAINT FK_SHIFT
        FOREIGN KEY (SHIFT_ID)
        REFERENCES SHIFT_TBL(SHIFT_ID)
);
